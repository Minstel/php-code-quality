language: php

php:
  - 5.4
  - 5.5
  - 5.6

install:
  - composer install
  - composer require satooshi/php-coveralls

script:
  - bin/phpcs . --standard=vendor/jasny/php-code-quality --ignore=/bin/,/vendor/,/bower_components/,/tests/
  - phpunit --configuration vendor/jasny/php-code-quality/phpunit.xml.dist --coverage-clover build/logs/clover.xml

after_success:
  - php vendor/bin/coveralls

